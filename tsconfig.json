{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["components/ui/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@services/*": ["services/*"]
    }
  }
}

